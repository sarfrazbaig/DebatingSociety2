<!DOCTYPE html>
<html>
  <head>
	<title>Debate</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  </head>

  <body>
	  <div id="modal1" class="modal">
	    <div class="modal-content center">
	    <h4>Sign Up</h4>
	    <p>Sign up with your social media account to debate and add your own topics</p>
	     <%= link_to 'Twitter', '/auth/twitter', :class => "btn twitter"%>	
          	     <%= link_to 'Facebook', '/auth/facebook',:class =>"btn facebook" %>
	    </div>
	  </div>

	<nav class="blue lighten-2">
	  <div class="nav-wrapper">
		<a href="#" class="brand-logo">Debating Society</a>
		<ul id="nav-mobile" class="right hide-on-med-and-down">
		  <li><%= link_to "Home", root_path%></li>
		  <li><%= link_to "Debate", posts_path%></li>

		  <% if current_user %>
          		<li><%= image_tag current_user.image_url, alt: current_user.name %></li>
          		<li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        
      		<% else %>
		  <li><a class="waves-effect waves-light btn modal-trigger" href="#modal1">Sign In / Sign Up</a></li>
          		 <% end %>
        		</ul>
     		
	  </div>
	</nav>
	<%= yield %>
	  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  </body>
</html>
